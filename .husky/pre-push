#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

BRANCH=$(git rev-parse --abbrev-ref HEAD)
PROTECTED_BRANCHES="^(master|main|develop|qa|stage)"

echo "\nğŸš€ Pre-push validations running...\n"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]; then
	echo "\nğŸš« Cannot push to remote $BRANCH branch, please create your own branch and use PR.\n"
	exit 1
fi

echo "\nğŸ“ Running ESlint validations...\n"
npm run lint

echo "\nğŸ› ï¸ Running TypeScript validations...\n"
npm run type-check

echo "\nğŸ§© Running unit test...\n"
#npm run test:unit

echo "Pushing to remote $BRANCH...\n"
